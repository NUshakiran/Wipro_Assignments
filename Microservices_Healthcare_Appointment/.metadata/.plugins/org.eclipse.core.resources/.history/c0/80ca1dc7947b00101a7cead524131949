package com.example.api_gateway;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;

@SpringBootApplication
public class ApiGatewayApplication {

	public static void main(String[] args) {
		SpringApplication.run(ApiGatewayApplication.class, args);
	}


	@Bean
	public RouteLocator routes(RouteLocatorBuilder builder) {
		return builder.routes()
				.route("patient-service", r -> r.path("/api/patients/**").uri("lb://patient-service"))
				.route("doctor-service", r -> r.path("/api/doctors/**").uri("lb://doctor-service"))
				.route("appointment-service", r -> r.path("/api/appointments/**").uri("http://localhost:7777"))
				.route("medical-service", r -> r.path("/api/medicals/**").uri("http://localhost:6666"))
				.route("billing-service", r -> r.path("/api/billings/**").uri("http://localhost:5555"))
				.build();
	}
}
